<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f|%>
        <div class="form-group row">
          <%= f.label :titulo, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Titulo do Artigo" %>
          </div>
        </div>
        <div class="form-group row mt-4">
          <%= f.label :descrição,  class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_area :description, rows: 5, class: "form-control shadow rounded", placeholder: "Descrição do Artigo" %>
          </div>
        </div>
        <div class="form-group row mt-4">
          <%= f.label :categorias ,  class: "col-2 col-form-label text-danger" %><br/>
          <div class="col-10 text-dark mt-2 font-monospace ">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-sm fs-6 w-25 mt-4" %>
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancelar e Retornar para a lista. ]", articles_path, class: "text-center text-info mb-4" %>
  </div>
</div>
