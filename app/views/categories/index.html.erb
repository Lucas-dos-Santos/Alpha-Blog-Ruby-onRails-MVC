<h1 class="text-center mt-3">Categorias</h1>
<%= paginate @categories%>
<div class="d-flex flex-column align-items-center">
  <% @categories.each do |category|%>
    <div class="container d-flex justify-content-md-center">
      <div class="col-4 my-3">
        <div class="card text-center shadow mb-5 rounded">
          <div class="card-header font-italic">
            <%= link_to category.name, category, class: "fs-4  fst-italic font-monospace text-dark " %><br/ >
              <p class="card-text"><%= pluralize(category.articles.count, "Artigo", plural: "Artigos") %></p>
            </div>
            <div class="card-footer text-muted">
              <small>
                Categoria Criada há <%= time_ago_in_words(category.created_at) %>
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if @categories.length != 1 %>
    <%= paginate @categories%>
  <% end %>
  <a class="back-to-top text-light bg-dark" href="#">➤</a>
