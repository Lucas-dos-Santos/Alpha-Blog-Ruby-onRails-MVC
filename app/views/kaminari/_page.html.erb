<% if page.current? %>
  <li class="page-item ">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link text-danger' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link bg-transparent text-dark' %>
  </li>
<% end %>
